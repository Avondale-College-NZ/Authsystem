<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Authsystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href-" />
    <link href="https://fonts.google.com/specimen/Noto+Sans+JP" rel="stylesheet">
    <link href-" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css" rel="stylesheet">
    "
</head>
<body >
   
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"> <img style="" width="50" src="~/css/lpl green.png" /></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial.cshtml" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Aboutus">About Us</a>
                        <li class="nav-item">
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area"" asp-controller="Home" asp-action="Dota">Dota</a>

                            <link class="nav-item" />
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; Lets Play Live Media Ltd. All rights reserved.- <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
        <div class="col-9 col-md-1 col-sm-1">
            <div class="d-flex justify-content-end justify-content-lg-center">
                <a href="https://www.facebook.com/letsplaylivehq/" class="link link--social col--10"><i class="icon icon--facebook"></i></a>
                <a href="https://twitter.com/LetsPlayLiveHQ" class="link link--social active col-10"><i class="icon icon--twitter"></i></a>
                <a href="https://www.youtube.com/channel/UCaQxBgRC76F_2sGQfp7vZvA" class="link link--social col-10"><i class="icon icon--youtube"></i></a>
                <a href="https://discord.gg/qZaBYEM" class="link link--social col-10"><i class="icon icon--discord"></i></a>
                <a href="https://www.twitch.tv/team/letsplaylive" class="link link--social"><i class="icon icon--twitch"></i></a>
            </div>
        </div>

            
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
<style type="text/css">
    body {
        background-color: #212529 !important;
        opacity:0.8;
    }
    h1
    {color:white;

    }
    p{
        color:white;
        font-size:25px;
    }
</style>
</body>
</html>
